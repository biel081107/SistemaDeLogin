@model Pecas
@{
    ViewData["Title"] = "Adicionar Peça";
}
<style>
    .btn-accent {
    background-color: var(--accent);
    color: var(--dark);
    font-weight: bold;
    border: none;
    }
    .btn-accent:hover {
        background-color: #e6c200;
    }

</style>

<div class="container py-5">
    <h2 class="text-center mb-4" style="color: var(--accent);">Adicionar Nova Peça</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post" asp-action="Adicionar" class="p-4 rounded-4 shadow" style="background-color: var(--dark); border: 1px solid var(--secondary);">
                <div class="mb-3">
                    <label class="form-label text-light">Nome da Peça:</label>
                    <input asp-for="NomePeca" class="form-control bg-dark text-light border-light" required />
                    <span asp-validation-for="NomePeca" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label text-light">Descrição:</label>
                    <textarea asp-for="Descricao" class="form-control bg-dark text-light border-light" rows="4"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label text-light">Preço (R$):</label>
                    <input asp-for="Preco" type="number" step="0.01" class="form-control bg-dark text-light border-light" required />
                    <span asp-validation-for="Preco" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <a href="/Pecas" class="btn btn-secondary me-2">Cancelar</a>
                    <button type="submit" class="btn btn-accent">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
